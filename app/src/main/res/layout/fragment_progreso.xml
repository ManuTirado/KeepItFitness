<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.progreso.ProgresoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.androidplot.xy.XYPlot
                android:id="@+id/plot"
                style="@style/APDefacto.Light"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:backgroundColor="#FFFFFF"
                app:graphBackgroundColor="#FFFFFF"
                app:legendVisible="false"
                app:lineLabelInsetLeft="0dp"
                app:lineLabelRotationBottom="0"
                app:lineLabelTextSizeBottom="20sp"
                app:lineLabels="left|bottom"
                app:previewMode="line_and_point"
                app:renderMode="use_background_thread"
                app:title="Minutos entrenados" />

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/pbChart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/plot"
                app:layout_constraintTop_toTopOf="@+id/plot"
                app:layout_constraintBottom_toBottomOf="@+id/plot"
                app:layout_constraintEnd_toEndOf="@+id/plot"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>